{
    "manifest_version": 3,
    "name": "Dikidi Bridge for SayYes ERP",
    "version": "1.2",
    "description": "Syncs appointment status from Dikidi to Supabase.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*.dikidi.net/*",
        "https://*.dikidi.ru/*",
        "https://*.dikidi.com/*",
        "https://*.dkd.su/*",
        "https://ozrpmpwnfrimjjrjsfms.supabase.co/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.dikidi.net/*",
                "https://*.dikidi.ru/*",
                "https://*.dikidi.com/*",
                "https://*.dkd.su/*"
            ],
            "js": [
                "content_script.js"
            ],
            "all_frames": true,
            "run_at": "document_start",
            "match_about_blank": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}